<h1 align="center">Registos de Patrocínios</h1>
<p id="notice"><%= notice %></p>

<% if grupo_drep? || estatuto_admin? %>
	<%= link_to 'Novo Patrocínio', new_patrocinio_path, :class => 'signup_button round' %>
<% end %>

<table>
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Valor</th>
    <th>Data de Início</th>
    <th>Data Final</th>
    <th>Utilizador</th>
  </tr>

<% @patrocinios.each do |patrocinio| %>
  <tr>
    <td><%= patrocinio.nome %></td>
    <td><%= patrocinio.descricao %></td>
    <td><%= patrocinio.valor %> €</td>
    <td><%= patrocinio.datainicio %></td>
    <td><%= patrocinio.datafim %></td>
    <% if Utilizador.find_by_id(patrocinio.utilizador_id).nil? %>
      <td> Inexistente </td>
    <% else %>
      <td><%= Utilizador.find_by_id(patrocinio.utilizador_id).nome %></td>
    <% end %>
    <td><%= link_to image_tag("search.png", :border=>0), patrocinio %></td>
    <% if grupo_drep? %>
      <td><%= link_to image_tag("edit.png", :border=>0), edit_patrocinio_path(patrocinio) %></td>
    <% end %>
    <td><%= link_to image_tag("destroy.png", :border=>0), patrocinio, confirm: 'Tem a certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
